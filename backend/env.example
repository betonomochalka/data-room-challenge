# --- Backend Local .env ---

# 1. Database (Supabase)
# Direct connection string for Prisma (migrations, Studio)
DATABASE_URL="postgresql://postgres.[YOUR_SUPABASE_REF]:[YOUR_DB_PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:5432/postgres"
# Connection string with pooler for the application itself
DIRECT_URL="postgresql://postgres.[YOUR_SUPABASE_REF]:[YOUR_DB_PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# 2. Supabase API
SUPABASE_URL="https://[YOUR_SUPABASE_REF].supabase.co"
SUPABASE_SERVICE_ROLE_KEY="[YOUR_SUPABASE_SERVICE_ROLE_KEY]" # Secret key!
SUPABASE_ANON_KEY="[SUPABASE_ANON_KEY]"

# 3. Application settings
NODE_ENV="development"
PORT="3001" # Port for your local backend to run on
ALLOWED_ORIGINS="http://localhost:3000" # Allow access from local frontend
REACT_APP_SITE_URL="http://localhost:3000"

# 4. Google Drive OAuth (Optional - for Google Drive integration)
GOOGLE_CLIENT_ID="[YOUR_GOOGLE_CLIENT_ID]" # Get from Google Cloud Console
GOOGLE_CLIENT_SECRET="[YOUR_GOOGLE_CLIENT_SECRET]" # Get from Google Cloud Console
GOOGLE_REDIRECT_URI="http://localhost:3001/api/google-drive/callback" # OAuth callback URL
FRONTEND_URL="http://localhost:3000" # Frontend URL for redirects after OAuth